{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "outDir": "lib",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "inlineSources": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": [
    "node_modules/@types",
    "src/**/*.ts"
  ]
}
